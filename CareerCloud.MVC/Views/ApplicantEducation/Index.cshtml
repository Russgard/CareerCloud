@using CareerCloud.Pocos
@model IEnumerable<ApplicantEducationPoco>

@{
	ViewBag.Title = "Applicant Education";
}

<h2>Index</h2>
<p>
	@Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Major)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.CertificateDiploma)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.StartDate)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.CompletionDate)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.CompletionPercent)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Major)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.CertificateDiploma)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.StartDate)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.CompletionDate)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.CompletionPercent)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.Id })
			</td>
		</tr>
	}

</table>
