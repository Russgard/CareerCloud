@using CareerCloud.Pocos
@model ApplicantResumePoco
@{
	ViewBag.Title = "Edit";
}

<h2>Edit Resume</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
	<h4>My Resume</h4>	
	<hr />
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	@Html.HiddenFor(model => model.Id)

	
	</div>

	<div class="form-group">
		@Html.LabelFor(model => model.Resume, htmlAttributes: new { @class = "control-label col-md-2" })
		<div class="col-md-10">
			@Html.TextAreaFor(model => model.Resume, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Resume, "", new { @class = "text-danger" })
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Save" class="btn btn-default" />
		</div>
	</div>

}

<div>
	@Html.ActionLink("Back", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
