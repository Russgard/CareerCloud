@using CareerCloud.Pocos
@model SecurityLoginPoco
@{
	ViewBag.Title = "Index";
}

<h2>Applicant Sign Up</h2>


@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>Security Sign Up</h4>
		<hr />
